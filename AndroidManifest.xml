<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.sensorcloud.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.sensorcloud.android.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.sensorcloud.android.activity.AuswahlseiteActivity"
            android:label="@string/title_activity_auswahlseite" >
        </activity>
        <activity
            android:name="de.sensorcloud.android.activity.NutzerStammdatenActivity"
            android:label="@string/title_activity_nutzerStammdaten" >
        </activity>
        <activity
            android:name="de.sensorcloud.android.activity.TelefonActivity"
            android:label="@string/title_activity_telefon" >
        </activity>
    </application>

</manifest>
