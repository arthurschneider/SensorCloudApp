<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#2ECCFA"
            android:text="@string/listtelefonNr" >
   	 </TextView>
    
    <Spinner
        android:id="@+id/spinnerTelStmmdtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#2ECCFA"
            android:text="@string/bezeichnung" >
   	 </TextView>
    
     <EditText
            android:id="@+id/tel_bez"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text">
  	</EditText>
  	  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#2ECCFA"
            android:text="@string/telefon" >
   	 </TextView>
  	
  	 <EditText
            android:id="@+id/tel_num"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text">
  	</EditText>
  	
  	 
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_marginTop="30dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <Button
	        android:id="@+id/tel_update"
	        android:layout_weight="1"
	        android:onClick="updateTel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#2ECCFA"
	        android:text="@string/update"
	         />
	    
	    <Button
	        android:id="@+id/tel_insert"
	        android:layout_weight="1"
	        android:onClick="insertTel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#2ECCFA"
	        android:text="@string/insert"
	         />
	    
	    <Button
	        android:id="@+id/tel_delete"
	        android:layout_weight="1"
	        android:onClick="deleteTel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#2ECCFA"
	        android:text="@string/delete"
	         />
	</LinearLayout>
</LinearLayout>