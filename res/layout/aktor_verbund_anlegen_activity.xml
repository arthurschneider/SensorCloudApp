<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    
  	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#2ECCFA"
        android:text="Liste mit Aktoren:" >
   	 </TextView>
   	 
    <Spinner
        android:id="@+id/spinner_angelegte_aktoren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#2ECCFA"
        android:text="Liste mit Aktorverbuenden:" >
   	 </TextView>
   	 
    <Spinner
        android:id="@+id/spinner_angelegte_aktverb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
	        android:id="@+id/akt_mit_verb_anlegen"
	        android:layout_weight="1"
	        android:onClick="insertAktorVerbund"
	        android:layout_gravity="center_horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:paddingRight="15dp"
	        android:paddingLeft="15dp"
	        android:textColor="#2ECCFA"
	        android:layout_marginTop="15dp"
	        android:text="Aktor zu Aktorverbund hinzufuegen" />
	        
	 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:textColor="#2ECCFA"
            android:text="Name des neuen Aktorverbundes:" >
   	 </TextView>
   	 
  	 <EditText
            android:id="@+id/neuer_akrverb"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text">
  	</EditText>
  	
  	 <Button
	        android:id="@+id/aktorverbung_anlegen"
	        android:layout_weight="1"
	        android:onClick="anlegenNeuVerb"
	        android:layout_gravity="center_horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="0dp"
	        android:paddingRight="15dp"
	        android:paddingLeft="15dp"
	        android:textColor="#2ECCFA"
	        android:layout_marginTop="15dp"
	        android:text="Neuen Aktorverbund mit Aktor anlegen"
	         />

</LinearLayout>
