<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	    
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="15sp"
	        android:textColor="#2ECCFA"
	        android:text="Liste aller meiner Servicelinien:" >
	   	 </TextView>
	   	 
	     <Spinner
	        android:id="@+id/spinnerAnzServLin"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    
	     <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textSize="15sp"
	            android:textColor="#2ECCFA"
	            android:text="Services von der ausgwaehlten Servicelinie:" >
	   	 </TextView>
	   	 
	     <Spinner
	        android:id="@+id/spinnerAnzService"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	     
	     <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textSize="15sp"
	            android:layout_marginTop="20dp"
	            android:textColor="#2ECCFA"
	            android:text="Funktionen vom ausgewaehlten Service:" >
	   	 </TextView>
	   	 
	     <Spinner
	        android:id="@+id/spinnerAnzFunktion"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	     
	     <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textSize="15sp"
	            android:layout_marginTop="30dp"
	            android:textColor="#2ECCFA"
	            android:text="Sensoren/Aktoren zum ausg. Service:" >
	   	 </TextView>
	   	 
	     <Spinner
	        android:id="@+id/spinnerAnzSensoren"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	
	</LinearLayout>

