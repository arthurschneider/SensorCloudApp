<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Liste aller meiner Sensoren:"
            android:textColor="#2ECCFA"
            android:textSize="15sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinnerSLSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Services zum ausgewaehlten Sensor:"
            android:textColor="#2ECCFA"
            android:textSize="15sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinnerSLServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Liste aller meiner Servicelinien"
            android:textColor="#2ECCFA"
            android:textSize="15sp" >
        </TextView>

        <Spinner
            android:id="@+id/spinnerSLServLinien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/ser_mit_linie_update"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:onClick="updateServiceLinie"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Service zur Servicelinie hinzufuegen"
            android:textColor="#2ECCFA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Name der neuen Servicelinie:"
            android:textColor="#2ECCFA"
            android:textSize="15sp" >
        </TextView>

        <EditText
            android:id="@+id/neue_servlinie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text" >
        </EditText>

        <Button
            android:id="@+id/servicelinie_anlegen"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:onClick="insertServiceInLinie"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Neue Servicelinie mit Service anlegen"
            android:textColor="#2ECCFA" />
    </LinearLayout>

</ScrollView>